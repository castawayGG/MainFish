# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=change-me-to-a-long-random-string

# Database (Postgres)
POSTGRES_USER=telegram_user
POSTGRES_PASSWORD=change-me-strong-password
POSTGRES_DB=telegram_panel
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Telegram API credentials (https://my.telegram.org/apps)
TG_API_ID=0
TG_API_HASH=

# Initial admin credentials
# Generate password hash: python -c "import bcrypt; print(bcrypt.hashpw(b'yourpassword', bcrypt.gensalt()).decode())"
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=

# Session encryption key (Fernet key, generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
SESSION_ENCRYPTION_KEY=

# IP whitelist for admin panel (comma-separated, leave empty to allow all)
IP_WHITELIST=

# Rate limiting
RATE_LIMIT_DEFAULT=100 per minute
MAX_LOGIN_ATTEMPTS=5

# Optional: global proxy for Telegram connections
PROXY_ENABLED=false
PROXY_TYPE=socks5
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# Flask environment
FLASK_ENV=production
FLASK_DEBUG=0
